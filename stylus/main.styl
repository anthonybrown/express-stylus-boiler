@import 'nib'

.clearfix
	clearfix()

*
	box-sizing border-box

html
	box-sizing inherit

body
	padding 0
	margin 0
	color #333
	background-color #f8f8f8
	font-family 'Cuprum', 'sans-serif'

	h1
		font-size: 1.5em
		margin 1em 0 0
		text-align center
		color steelblue
		/*shadow-stroke(steelblue)*/

	.container
		width 80%
		margin 0 auto

	@media (min-width: 480px)
		h1
			text-align left
			font-size: 2.3em

	@media (min-width: 767px)
		h1
			font-size: 2.5em
